<h1>Create a new meeting</h1>

<form id="createNew" >
    <label>Name</label>
    <input id="createName" name="createName" type="text" value="{{createName}}">
    <br>
    <label>Email</label>
    <input id="createEm" name="createEm" type="text" value="{{createEm}}">
    <br>
    <label>Company</label>
    <input id="createC" name="createC" type="text" value="{{createC}}">
    <br>
    <label>Position</label>
    <input id="createP" name="createP" type="text" value="{{createP}}">
    <br>
    <button type="submit">Save</button>
</form>

<div class="log"></div>

<table class="table_sort">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Должность</th>
            <th>Статус встречи</th>
        </tr>
    </thead>
    <tbody>
        {{!-- {{#each list}} --}}
            {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.position}}</td>
        </tr>
            {{/each}}
        {{!-- {{/each}} --}}
        
    </tbody>
</table>

<style>.table_sort table {
    border-collapse: collapse;
}

.table_sort th {
    color: #ffebcd;
    background: #008b8b;
    cursor: pointer;
}

.table_sort td,
.table_sort th {
    width: 150px;
    height: 40px;
    text-align: center;
    border: 2px solid #846868;
}

.table_sort tbody tr:nth-child(even) {
    background: #e3e3e3;
}

th.sorted[data-order="1"],
th.sorted[data-order="-1"] {
    position: relative;
}

th.sorted[data-order="1"]::after,
th.sorted[data-order="-1"]::after {
    right: 8px;
    position: absolute;
}

th.sorted[data-order="-1"]::after {
	content: "▼"
}

th.sorted[data-order="1"]::after {
	content: "▲"
}</style>

